{
  "compilerOptions": {
    /* Base Options */
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    
    /* Emit */
    "outDir": "./dist",
    "rootDir": "./src",
    
    /* Type Checking */
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    
    /* Additional options for better compatibility */
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules", "dist"]
}
